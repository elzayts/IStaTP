@model IEnumerable<istp_laba1.StudentAbonements>

@{
    ViewData["Title"] = "Student's abonements";
}

    <h1>Student's abonements</h1>

<p>
    <a asp-action="Create">Add abonement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivationDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Stud)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivationDate)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Stud.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
